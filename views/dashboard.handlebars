<h1 class="display-4 align-items-center font-italic"> Welcome {{name}}</h1>

<section class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <h3 class="display-6 font-italic box-shadow">Create New Animal Review!</h3>
  <form class="new-animal-review ">
    <div class ="flex-md-row mb-4 box-shadow">
      <label class ="d-inline-block mb-2 text-primary"for="review-title">Review Title:</label>
      <input type="text" id="review-title" name="review-title" />
    </div>
    <div class ="flex-md-row mb-4 box-shadow h-md-250">
      <label class ="d-inline-block mb-2 text-primary"for="review-text">Review Text:</label>
      <textarea id="review-text" name="review-text"></textarea>

    

    </div> 
  

    <button type="submit" class="button">Create Animal Review!</button>
  </form>
</section>  

  {{#if photo}}  
    <img src="{{photo}}" />
      
    {{else}}

    <p>Upload a photo of your animal!</p>
    <form method="post" action="/upload" enctype="multipart/form-data">
      <input type="file" name="file">
      <input type="submit" value="Upload">
    </form> 

  {{/if}}

    



{{#if animalreviews}}
  <section>
    <h2>Your Reviews</h2>
    <ol>
      {{#each animalreviews as |AnimalReview|}}
        <article class="review">
          <header class="title">
            <div>
              <a href="/animalreview/{{id}}">{{AnimalReview.animal_name}}</a>
              <div>Post by:
                {{user.name}}
                on
                {{format_date date_created}}</div>
            </div>
            <div class="content">
              <p>{{AnimalReview.contents}}</p>
            </div> 
            <h3 class ="display-4">Your Animal</h3>
            <img class="container col-4" src="{{photo}}">
          </header>
        </article>
      {{/each}}
    </ol>
  </section>
{{/if}}

<script src="/js/add-review.js"></script>